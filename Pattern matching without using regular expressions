#check if a pattern is a valid phone number
def isphonenumber(num):
	if len(num)!=12:
		return False
	for i in range(0,3):
		if not num[i].isdigit():
			return False
	if num[3]!='-':
		return False
	for i in range(4,7):
		if not num[i].isdigit():
			return False
	if num[7]!='-':
		return False
	for i in range(8,12):
		if not num[i].isdigit():
			return False
	return True

print(isphonenumber("354-337-7696"))
print(isphonenumber("adfhdh"))
print(isphonenumber("5685798790"))

